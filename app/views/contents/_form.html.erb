<%= form_for @content, html: { multipart: true } do |form| %>
  <% if @content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% @content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label class="grey-text">Carica il contenuto digitale che vuoi vedere (formati supportati: PowerPoint, Excel, Word, PDF, immagini e MP3)</label>
    <br>
    <%= form.file_field :allegato %>
  </div>
  <br>

  <div class="field">
    <%= form.label :titolo %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :descrizione %>
    <%= form.text_area :description, class: "materialize-textarea" %>
  </div>

  <div class="field">
    <%= form.label :prezzo %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <label class="grey-text">Carica un'immagine da utilizzare come cover per il tuo contenuto</label>
    <br>
    <%= form.file_field :cover %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit 'Salva Contenuto', class: "btn btn-form" %>
  </div>

  <br>

<% end %>
