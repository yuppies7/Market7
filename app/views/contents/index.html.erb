<p id="notice"><%= notice %></p>

<!--<h1>Contents</h1>-->
<div class="row">
  <% @contents.each do |content| %>

    <div class="col s6">
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <%= image_tag content.cover.url(:thumb), class: "activator" %>
          <!--<img class="activator" src="images/office.jpg">-->
        </div>
        <div class="card-content">
          <span class="grey-text text-darken-4"><%= content.title %><i class="card-title activator material-icons right">more_vert</i></span>
          <div>
            <span>Venduto da <%= content.user.name if content.user %></span>
            <span class="right"><%= number_to_currency(content.price) %></span>
          </div>
          <br>
          <div class="center"><%= link_to 'Scopri di piÃ¹', content, class: "btn" %></div>
          <% if content.user == current_user %>
            <br>
            <div class="center"><%= link_to 'Modifica', edit_content_path(content) %>
            | <%= link_to 'Elimina', content, method: :delete, data: { confirm: 'Are you sure?' } %></div>
          <% end %>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%= content.title %><i class="material-icons right">close</i></span>
          <p><%= content.description %></p>
        </div>
      </div>
    </div>

  <% end %>
</div>

<br>

<div class="center">
  <%= will_paginate @contents %>
</div>

